<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <!-- Login and Logout feature -->
    <% if (!user['id']) { %>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
          <input class="form-control" type="text" name="email" placeholder="Username" style="height: 30px; width: 300px; margin: .5em">
          <button type="login" class="btn btn-outline-dark my-2 my-sm-0">Login</button>
        </div>
      </form>
    <%}else {%>
    <form class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">
      <span class="navbar-text" style="color:black; padding-right: 10px">Logged in as: <%= user['email'] %></h4>
      <button type="login" class="btn btn-outline-dark my-2 my-sm-0" style="margin: .5em">Logout</button>
    </form>
    <%}%>
  </nav>
</header>